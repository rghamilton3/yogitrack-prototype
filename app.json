{
  "name": "YogiTrack",
  "description": "Yoga Studio Management System",
  "repository": "https://github.com/rghamilton3/yogitrack-prototype",
  "logo": "https://raw.githubusercontent.com/rghamilton3/yogitrack-prototype/main/public/images/Logo.png",
  "keywords": ["node", "express", "mongodb", "react", "yoga", "studio", "management"],
  "stack": "heroku-22",
  "env": {
    "NODE_ENV": {
      "description": "Environment setting",
      "value": "production"
    },
    "MONGO_URI": {
      "description": "MongoDB connection string for production database",
      "required": true
    },
    "PORT": {
      "description": "Port for the application",
      "value": "8080"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    "mongolab:sandbox"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "echo 'YogiTrack deployed successfully!'"
  }
}